<div class="max-w-6xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">API Keys</h1>
    <button
      type="button"
      class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium"
      {{on "click" this.createNew}}
    >
      Create New API Key
    </button>
  </div>

  {{#if this.model.length}}
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        {{#each this.model as |apiKey|}}
          <li class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center">
                  <h3
                    class="text-lg font-medium text-gray-900"
                  >{{apiKey.name}}</h3>
                  <span
                    class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      {{apiKey.statusClass}}"
                  >
                    {{apiKey.statusText}}
                  </span>
                </div>
                <div class="mt-2 text-sm text-gray-500">
                  <p>Key: {{apiKey.keyPrefix}}...</p>
                  <p>Created:
                    {{moment-format apiKey.createdAt "MMM DD, YYYY"}}</p>
                  {{#if apiKey.expiresAt}}
                    <p>Expires:
                      {{moment-format apiKey.expiresAt "MMM DD, YYYY"}}</p>
                  {{/if}}
                  <p>Scopes:
                    {{#each apiKey.scopes as |scope|}}
                      {{scope}}
                    {{/each}}
                  </p>
                </div>
              </div>
              <div class="flex space-x-2">
                <LinkTo
                  @route="admin.show"
                  @model={{apiKey.id}}
                  class="text-blue-600 hover:text-blue-900 font-medium"
                >
                  View
                </LinkTo>
                {{#unless apiKey.isRevoked}}
                  <button
                    type="button"
                    class="text-red-600 hover:text-red-900 font-medium"
                    {{on "click" (fn this.revokeKey apiKey)}}
                  >
                    Revoke
                  </button>
                {{/unless}}
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  {{else}}
    <div class="text-center py-12">
      <svg
        class="mx-auto h-12 w-12 text-gray-400"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M15 7a2 2 0 012 2m0 0a2 2 0 012 2m-2-2h-6m6 0v6a2 2 0 01-2 2H9a2 2 0 01-2-2V9a2 2 0 012-2h2m0 0V7a2 2 0 012-2m0 0a2 2 0 012 2m0 0v2a2 2 0 01-2 2m0 0h2a2 2 0 012-2V9a2 2 0 01-2 2m-2-2V7a2 2 0 012-2"
        />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No API keys</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating your first
        API key.</p>
      <div class="mt-6">
        <button
          type="button"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium"
          {{on "click" this.createNew}}
        >
          Create API Key
        </button>
      </div>
    </div>
  {{/if}}
</div>