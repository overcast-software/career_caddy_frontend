{{page-title "Summaries"}}
<section class="container">
  <div class="panel-card">
    <h1 class="panel-title">Summaries</h1>

    {{#if this.model.length}}
      <ul class="desc-list">
        {{#each this.model as |summary|}}
          <li class="desc-item">
            <article class="summary-item">
              <header class="summary-header">
                {{#if summary.jobPost}}
                  <span class="muted">Job:</span>
                  <LinkTo @route="job-posts.show" @model={{summary.jobPost}}>
                    {{summary.jobPost.title}}
                  </LinkTo>
                {{/if}}

                {{#if summary.resume}}
                  <span class="muted">â€¢ Resume:</span>
                  <LinkTo @route="resumes.show" @model={{summary.resume}}>
                    {{#if summary.resume.title}}
                      {{summary.resume.title}}
                    {{else}}
                      Resume {{summary.resume.id}}
                    {{/if}}
                  </LinkTo>
                {{/if}}
              </header>

              <p class="summary-content clamp-4">
                {{summary.content}}
              </p>
            </article>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="muted">No summaries yet.</p>
    {{/if}}
  </div>

  {{outlet}}
</section>
