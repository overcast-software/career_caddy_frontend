<Menus::SubnavBar>
  <LinkTo
    class="nav-link"
    @route="job-posts.edit"
    @model={{this.model}}
  >Edit</LinkTo>
  <button
    class="nav-link btn btn-link"
    type="button"
    {{on "click" this.createQuestionWithApplication}}
  >
    New question
  </button>
  <LinkTo
    class="nav-link"
    @route="job-posts.show.job-applications.index"
    @model={{this.model}}
  >
    Applications
  </LinkTo>

</Menus::SubnavBar>
<BarCart @flashMessages={{this.flashMessages}} />
<div class="fairway">
  <Panel::Card
    @title="{{this.model.title}} at {{this.model.company.name}}"
    @collapsible={{true}}
    @startCollapsed={{true}}
  >
    <:top as |card|>
      <button
        type="button"
        {{on "click" card.toggleCollapsed}}
        class="btn btn-sm"
      >
        {{if card.collapsed "Show" "Hide"}}
        Details
      </button>
    </:top>
    <:default>
      <JobPosts::Item
        @showControls={{this.showControls}}
        @jobPost={{this.model}}
        @showLoading={{this.showLoading}}
        @resumeSetter={{this.resumeSetter}}
        @resume={{this.model.resume}}
        @resumes={{this.resumes}}
      />
    </:default>
  </Panel::Card>

  {{outlet}}
</div>
