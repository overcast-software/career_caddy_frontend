<Menus::SubnavBar>
  <button
    type="button"
    class="btn"
    {{on "click" this.saveCoverLetter}}
  >Save</button>
</Menus::SubnavBar>
<BarCart @flashMessages={{this.flashMessages}} />
<div class="fairway">
  <div class='builder-form'>
    <Panel::Card>
      <label >Select a job post</label>
      <JobPosts::Selector
        @jobPosts={{this.jobPosts}}
        @jobPostCallback={{this.addJobPostToCoverLetter}}
      />
    </Panel::Card>
  </div>
  <Panel::Card @collapable={{true}}>
    <CoverLetters::Form
      @coverLetter={{this.model}}
    />
  </Panel::Card>
</div>
