<form class="builder-form">
  {{#if this.errorMessage}}<p class="error">{{this.errorMessage}}</p>{{/if}}
  <input type="hidden" name="resume_id" value={{this.resumeId}} />
  <label class="field">Company <input type="text" value={{this.experience.company.name}} disabled /></label>
  <label class="field">Title <input type="text" value={{this.experience.title}} {{on "input" (fn this.updateField "title")}} /></label>
  <label class="field">Location <input type="text" value={{this.experience.location}} {{on "input" (fn this.updateField "location")}} /></label>
  <label class="field">Start Date <input type="date" value={{this.formattedStartDate}} {{on "input" (fn this.updateField "startDate")}} /></label>
  <label class="field">End Date <input type="date" value={{this.formattedEndDate}} {{on "input" (fn this.updateField "endDate")}} /></label>
  <label class="field">
    <span class="field-label">Description</span>
  </label>
  <section class="descriptions">
    <h4 class="section-title">Descriptions</h4>
    <ul class="desc-list editable">
      {{#each this.orderedDescriptions as |d index|}}
        <li class="desc-item">
          <label class="field">Order
            <input type="number" value={{d.order}} {{on "input" (fn this.updateDescriptionOrder d)}} />
          </label>

          <label class="field">Content
            <textarea rows="2" value={{d.content}} {{on "input" (fn this.updateDescriptionContent d)}}></textarea>
          </label>

          <button type="button" class="btn danger" {{on "click" (fn this.removeDescription d)}}>Remove</button>
        </li>
      {{/each}}
    </ul>
    <button type="button" class="btn small" {{on "click" this.addDescription}}>Add description</button>
  </section>
  <div class="form-actions">
    <button type="button" class="btn" {{on "click" this.cancel}}>Cancel</button>
    <button type="button" class="btn" {{on "click" this.deleteExperience}}>Delete</button>
    <button type="button" class="btn primary" {{on "click" this.save}}>Save</button>
  </div>
</form>
