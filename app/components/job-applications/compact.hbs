<tr class="*:text-gray-900 *:first:font-medium">
  <td
    class="px-3 py-2 whitespace-nowrap max-w-xs truncate"
  >{{this.jobPost.title}}</td>
  <td class="px-3 py-2 whitespace-nowrap">{{this.jobPost.company.name}}</td>
  <td class="px-3 py-2 whitespace-nowrap">{{@jobApplication.status}}</td>
  <td class="px-3 py-2 whitespace-nowrap">
    <LinkTo
      @route="job-applications.show"
      @model={{@jobApplication.id}}
      class="text-blue-600 hover:underline"
    >show</LinkTo>
    {{" "}}
    <LinkTo
      @route="job-applications.edit"
      @model={{@jobApplication.id}}
      class="text-blue-600 hover:underline"
    >edit</LinkTo>
    {{" "}}
    <button type="button" class="text-red-600 hover:underline">delete</button>
  </td>
</tr>
{{yield}}