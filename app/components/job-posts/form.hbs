<form class="builder-form" {{on "submit" this.submitEdit}}>
  <div class="field">
    <label class="field-label" for="company-select">Company</label>
    <select
      id="company-select"
      value={{this.selectedCompanyId}}
      {{on "change" this.handleCompanyChoice}}
    >
      <option value="__new__">Create new companyâ€¦</option>
      {{#each this.companies as |company|}}
        <option value={{company.id}}>{{company.name}}</option>
      {{/each}}
    </select>
  </div>

  {{#if this.useNewCompany}}
    <div class="field">
      <label class="field-label" for="company-new-name">New company name</label>
      <input
        id="company-new-name"
        type="text"
        value={{this.newCompanyName}}
        {{on "input" this.updateNewCompanyName}}
      />
    </div>
  {{/if}}

  <div class="field">
    <label class="field-label" for="title">Title</label>
    <input
      id="title"
      type="text"
      value={{@jobPost.title}}
      {{on "input" (fn this.updateField "title")}}
      required
    />
  </div>
  <div class="field">
    <label class="field-label" for="description">Description</label>
    <textarea
      id="description"
      value={{@jobPost.description}}
      {{on "input" (fn this.updateField "description")}}
      rows="8"
    ></textarea>
  </div>

  <div class="field">
    <label class="field-label" for="url">url</label>
    <input
      id="url"
      type="text"
      value={{@jobPost.link}}
      {{on "input" (fn this.updateField "link")}}
      required
    />
  </div>

  <div class="form-actions">
    <button type="submit" class="btn primary">Save</button>
    <button class="btn danger" type="button" {{on 'click' this.submitDelete }}>Delete</button>
  </div>
</form>
