<div class="mx-auto max-w-5xl px-4">
  <form class="" {{on "submit" this.submitEdit}}>
    <fieldset
      class="fieldset bg-base-200 border-base-300 rounded-box border p-4"
    >
      {{! Title (left) and Company (right) }}
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <label for="Title" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
            Title
          </label>
          <input
            id="title"
            type="text"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            value={{@jobPost.title}}
            {{on "input" (fn this.updateField "title")}}
            required
          />
        </div>
        <div class="w-full md:w-1/2 px-3">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Company</label>
          <PowerSelectWithCreate
            @options={{this.companies}}
            @searchField="name"
            @onCreate={{this.addCompanyToJobPost}}
            @onChange={{this.updateCompany}}
            @selected={{@jobPost.company}}
            as |company|
          >
            {{company.name}}
          </PowerSelectWithCreate>
        </div>
      </div>

      {{! Description (full width) }}
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <label for="Description" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
            Description
          </label>
          <textarea
            id="description"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            value={{@jobPost.description}}
            {{on "input" (fn this.updateField "description")}}
            rows="8"
          ></textarea>
        </div>
      </div>

      {{! URL (left) and Buttons (right) }}
      <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="url">URL</label>
          <input
            id="url"
            type="text"
            class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
            value={{@jobPost.link}}
            {{on "input" (fn this.updateField "link")}}
            required
          />
        </div>
        <div class="w-full md:w-1/2 px-3 flex items-end justify-end gap-2">
          <button
            class="border border-gray-200 px-3 py-2 font-medium text-gray-700 transition-colors hover:bg-gray-50 hover:text-gray-900 focus:z-10 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white focus:outline-none disabled:pointer-events-auto disabled:opacity-50"
            type="submit"
          >
            Save
          </button>
          <button
            class="rounded-l-sm border border-gray-200 px-3 py-2 font-medium text-gray-700 transition-colors hover:bg-gray-50 hover:text-gray-900 focus:z-10 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white focus:outline-none disabled:pointer-events-auto disabled:opacity-50"
            type="button"
            {{on "click" this.submitDelete}}
          >
            Delete
          </button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
