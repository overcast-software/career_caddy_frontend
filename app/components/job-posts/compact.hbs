<article class="panel-card compact">
  <h3 class="panel-title">{{@jobPost.company.name}}</h3>

    <h3>
      <LinkTo @route="job-posts.show" @model={{@jobPost}}>
        {{@jobPost.title}}
      </LinkTo>
      {{#if @jobPost.link}}
        --
        <a href="{{@jobPost.link}}">external</a>
      {{/if}}
    </h3>
    <LinkTo @route="job-posts.edit" class="btn" @model={{@jobPost}}>Edit</LinkTo>
</article>
