<tr class="*:text-gray-900 *:first:font-medium">
  <td class="px-3 py-2 whitespace-nowrap max-w-xs truncate">{{truncate
      @jobPost.title
      40
    }}</td>
  <td class="px-3 py-2 whitespace-nowrap">{{@jobPost.company.name}}</td>
  <td class="px-3 py-2 whitespace-nowrap">{{moment-format
      @jobPost.postedDate
      "MMM D, YYYY"
    }}</td>
  <td class="px-3 py-2 whitespace-nowrap">
    <LinkTo
      @route="job-posts.show"
      @model={{@jobPost.id}}
      class="text-blue-600 hover:underline"
    >show</LinkTo>
    {{" "}}
    <LinkTo
      @route="job-posts.edit"
      @model={{@jobPost.id}}
      class="text-blue-600 hover:underline"
    >edit</LinkTo>
    {{" "}}
    <button type="button" class="text-red-600 hover:underline">delete</button>
  </td>
</tr>