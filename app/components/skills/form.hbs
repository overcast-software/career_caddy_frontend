<form class="builder-form">
  <div class="field">
    <label class="field-label">Skills</label>
    <div class="input-group">
      <textarea
        class="desc-editor"
        placeholder="Add a skill"
        value={{if @skill @skill.text this.newSkill}}
        rows={{this.lineCount}}
        {{on "input" this.updateSkill}}
      ></textarea>
      <button type="button" class="btn primary" {{on "click" this.addSkill}}>Add</button>
    </div>
  </div>
</form>
