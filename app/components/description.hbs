<li class="desc-item">
  {{#if @isEditing}}
    <textarea
      class="desc-edit"
      style="width: 100%; resize: none;"
      value={{@draft}}
      {{on "input" @onInput}}
      {{on "keydown" @onKeydown}}
      {{on "blur" @onCommit}}
    ></textarea>
  {{else}}
    <button
      type="button"
      class="icon-button edit"
      aria-label="Edit description"
      {{on "click" @onEdit}}
    >
      âœŽ
    </button>
    <span class="desc-text" {{on "dblclick" @onDblClick}}>
      {{@description.content}}
    </span>
  {{/if}}

  {{yield}}
</li>
