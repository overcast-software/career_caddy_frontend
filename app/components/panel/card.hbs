<div class="panel-card {{if @collapsible "collapsible"}} {{if this.collapsed "collapsed"}}">
  <div class="collapsible-head">
    <div class="panel-title">{{@title}}</div>
    {{#if @collapsible}}
      <button type="button" class="btn small" {{on "click" this.toggleCollapsed}}>
        {{if this.collapsed "Expand" "Collapse"}}
      </button>
    {{/if}}
  </div>

  <nav class="toolbar" role="navigation" aria-label="Directional toolbar" {{on "click" this.handleToolbarClick}} {{on "keydown" this.handleToolbarKeydown}}>
    <div class="group">
      <button type="button" data-dir="left" aria-label="Left">←</button>
      <button type="button" data-dir="right" aria-label="Right">→</button>
    </div>
    <div class="group">
      <button type="button" data-dir="down" aria-label="Down">Down</button>
      <button type="button" data-dir="up" aria-label="Up">Up</button>
    </div>
  </nav>

  {{#if @collapsible}}
    <div class="collapsible-body">
      <div>
        {{yield}}
      </div>
    </div>
  {{else}}
    {{yield}}
  {{/if}}
</div>
