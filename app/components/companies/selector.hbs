<PowerSelect
  @options={{@companies}}
  @onChange={{this.updateCompany}}
  @searchEnabled={{true}}
  @searchField='name'
  @placeHolder={{this.placeHolder}}
  @labelText={{this.labelText}}
  @selected={{this.selectedCompany}}
  @onInput={{@onInput}}
  @onKeydown={{@onKeydown}}
  as |company|
>
  {{company.name}}
</PowerSelect>
{{yield}}
