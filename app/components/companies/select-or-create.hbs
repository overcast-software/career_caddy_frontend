<div class="builder-form">
  <div class="field companies-select-row">
    <div class="grow">
      <Companies::Selector
        @companies={{@companies}}
        @onInput={{this.selectInput}}
        @companyCallback={{this.companyFilter}}
        @onKeydown={{this.companyKeydown}}
        @labelText={{this.labelText}}
        @onChange={{this.updateCompany}}
        as |company|
      >
        {{company.name}}
      </Companies::Selector>
    </div>
  </div>

  {{#if this.showCreate}}
    <div class="field">
      <Companies::FastCreate />
    </div>
  {{/if}}
</div>
{{yield}}
