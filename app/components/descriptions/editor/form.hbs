<li class="desc-item">
  <div class="input-group">
    <button
      type="button"
      class="btn danger"
      title="Delete"
      aria-label="Delete description"
      {{on "click" this.delete}}
    >ğŸ—‘</button>

    <textarea
      class="desc-editor"
      rows="3"
      value={{this.draft}}
      {{on "input" this.onInput}}
      {{on "keydown" this.handleDescriptionKeydown}}
      {{on "blur" this.commitDescription}}
    ></textarea>

    <button
      type="button"
      class="btn primary"
      {{on "click" this.commitDescription}}
    >Save</button>

  </div>
</li>
