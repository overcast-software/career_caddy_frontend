<li class="desc-item">
  <div class="input-group">

    <textarea
      class="desc-editor"
      rows="3"
      value={{this.draft}}
      aria-label="description"
      {{on "input" this.onInput}}
      {{on "blur" this.commitDescription}}
    ></textarea>

    <button
      type="button"
      class="btn primary"
      title="Save"
      aria-label="Save description"
      {{on "click" this.commitDescription}}
    >💾</button>
    <button
      type="button"
      class="btn danger"
      title="Delete"
      aria-label="Delete description"
      {{on "click" this.delete}}
    >🗑</button>
  </div>
</li>
