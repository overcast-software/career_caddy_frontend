{
    "extends": "@ember/app-tsconfig",
    "include": ["app", "tests", "types"],
    "compilerOptions": {
        "allowJs": true,
        "paths": {
            "my-app/tests/*": ["./tests/*"],
            "my-app/*": ["./app/*"],
            "*": ["./types/*"],
        },
        "types": [
            "ember-source/types",
            "@embroider/core/virtual",
            "vite/client",
            "@glint/ember-tsc/types",
        ],
    },
}
